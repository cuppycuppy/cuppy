<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @recipe.title %><br>
  <%= image_tag @recipe_photo.title %><br>
     
  <%= br(@recipe.material) %><br>
  
  <strong>Step:</strong><br>
  <% @steps.each do |step| %>
    <%= step.step %><br>
  <% end%>
</p>

<strong>Situation:</strong>
<% @situations.each do |situation| %>
  <%= link_to situation.name, situation_path(situation.id) %>
<% end %>

<%= link_to 'Edit', edit_recipe_path(@recipe) %> |
<%= link_to 'Back', recipes_path %>
